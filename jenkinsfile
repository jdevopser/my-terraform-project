pipeline{
  agent any
    environment {
        PASSWORD = credentials ('github_credential')
  }  
    stages {
            stage('build Image'){
     
                    steps{
                        echo "Creating Image"
                        sh 'docker build . -t admin/jenkins:latest'
                    }
            }
             stage('Docker Push'){
     
                    steps{
                        echo "Pushing To DockerHub"
                        sh 'docker login -u admin -p ${PASSWORD}'
                        sh 'docker push admin/jenkins:latest'
                    }
            }
    }
}

    